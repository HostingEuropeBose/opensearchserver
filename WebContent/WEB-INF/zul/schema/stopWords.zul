<window id="stopwords"
	use="com.jaeksoft.searchlib.web.controller.schema.StopWordsController">
	<panel visible="@{stopwords.isNotEdit}" title="Stop words list"
		border="normal">
		<panelchildren>
			<listbox model="@{stopwords.manager.list}"
				sizedByContent="true" width="100%">
				<listhead>
					<listheader label="List name" hflex="true" />
					<listheader label="Action" align="center" />
				</listhead>
				<auxhead>
					<auxheader>
						<textbox width="99%"
							value="@{stopwords.editName}" readonly="@{isEdit}" />
					</auxheader>
					<auxheader>
						<button image="/images/action_add.png"
							forward="onAdd" />
					</auxheader>
				</auxhead>
				<listitem self="@{each='listname'}">
					<listcell label="@{listname}" />
					<listcell>
						<hbox align="center">
							<button label="Edit"
								onClick="stopwords.onEdit(self)">
								<custom-attributes
									listname="@{listname}" />
							</button>
							<button image="/images/action_delete.png"
								onClick="stopwords.onDelete(self)">
								<custom-attributes
									listname="@{listname}" />
							</button>
						</hbox>
					</listcell>
				</listitem>
			</listbox>
		</panelchildren>
	</panel>
	<panel visible="@{stopwords.isEdit}" border="normal"
		title="@{stopwords.currentName}">
		<toolbar>
			<button label="Cancel" forward="onCancel" />
			<space />
			<button label="Save" forward="onSave" />
		</toolbar>
		<panelchildren>
			<textbox width="100%" multiline="true" height="300px"
				value="@{stopwords.content}" />
		</panelchildren>
	</panel>
</window>