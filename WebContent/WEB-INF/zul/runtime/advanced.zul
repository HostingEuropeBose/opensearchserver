<window id="window"
	apply="com.jaeksoft.searchlib.web.controller.runtime.AdvancedComposer">
	<panel title="Advanced" border="normal">
		<panelchildren>
			<grid>
				<columns>
					<column align="right" hflex="min" />
					<column align="left" hflex="min" />
					<column align="left" />
				</columns>
				<rows>
					<row>
						<label value="Enabled OCR" />
						<checkbox
							checked="@{window$composer.ocrManager.enabled}" />
						<space />
					</row>
					<row>
						<label value="Tesseract path" />
						<cell>
							<textbox cols="80"
								value="@{window$composer.ocrManager.tesseractPath}" />
							<button id="check" label="Check" />
						</cell>
						<label
							value="Enter the path to the Tesseract executable Eg.: /usr/local/bin/tesseract" />
					</row>
					<row>
						<label value="Tesseract default language" />
						<listbox mold="select"
							selectedItem="@{window$composer.ocrManager.defaultLanguage}"
							model="@{window$composer.languageEnum}">
							<listitem self="@{each=langEnum}"
								label="@{langEnum.name}" value="@{langEnum}" />
						</listbox>
						<label
							value="Enter the default language used by Tesseract" />
					</row>
					<row>
						<label value="FunctionTimer" />
						<cell>
							<button id="dumpFunctionTimer" label="Dump" />
							<space />
							<button id="resetFunctionTimer"
								label="Reset" />
						</cell>
					</row>
				</rows>
			</grid>
		</panelchildren>
	</panel>
</window>