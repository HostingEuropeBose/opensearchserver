<window id="logs"
	use="com.jaeksoft.searchlib.web.controller.runtime.LogsController"
	border="normal" vflex="true" hflex="true">
	<panel title="Logs" border="normal" hflex="true" vflex="true">
		<toolbar>
			<button label="Reload the file list"
				forward="onReloadFileList" />
			<button label="Reload the current log"
				disabled="@{logs.fileNotSelected}" forward="onReloadCurrentLog" />
			<button label="Go to the beginning"
				disabled="@{logs.fileNotSelected}" forward="onGoToBeginning" />
			<button label="Go to the end"
				disabled="@{logs.fileNotSelected}" forward="onGoToEnd" />
		</toolbar>
		<panelchildren>
			<hbox spacing="0" width="100%">
				<listbox model="@{logs.logFiles}" sizedByContent="true"
					selectedItem="@{logs.selectedFile}" height="400px" />
				<textbox id="logview" multiline="true" readonly="true"
					hflex="true" vflex="true" value="@{logs.currentLog}" />
			</hbox>
		</panelchildren>
	</panel>
	<script type="text/javascript">

		<![CDATA[ function toTheEnd(txtBox) { var txtEle =
		document.getElementById(txtBox); txtEle.scrollTop =
		txtEle.scrollHeight; } function toTheBegining(txtBox) { var
		txtEle = document.getElementById(txtBox); txtEle.scrollTop = 0;
		} ]]>
		
	
		</script>
</window>