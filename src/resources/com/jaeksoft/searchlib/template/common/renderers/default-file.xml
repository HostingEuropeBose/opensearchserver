<renderer name="default" request="search" searchButtonLabel="Search">
	<style>
<![CDATA[
font-family: arial,sans-serif;
font-size: small;
]]>
	</style>
	<autocompleteStyle>
<![CDATA[
margin: 0;
float: left;
cursor: pointer;
padding-left:3px;
padding-right:3px;
]]>
	</autocompleteStyle>
	<autocompleteListStyle>
<![CDATA[
background-color: #FFFFFF;
text-align: left;
border-left: 1px solid #D3D3D3;
border-bottom: 1px solid #D3D3D3;
border-right: 1px solid #D3D3D3;
]]>
	</autocompleteListStyle>
	<autocompleteLinkStyle>
<![CDATA[
color:#222222;
font-size: 14px;
background-color:
		#FFFFFF;padding: 2px 6px 2px 6px;
]]>
	</autocompleteLinkStyle>
	<autocompleteLinkHoverStyle>
<![CDATA[
color:#222222;
font-size: 14px;
background-color: #F5F5F5;
padding: 2px 6px 2px 6px;
]]>
	</autocompleteLinkHoverStyle>

	<field fieldName="fileName" fieldType="SNIPPET" urlFieldName="uri">
		<cssStyle>font-size:medium;</cssStyle>
	</field>
	<field fieldName="content" fieldType="SNIPPET" urlFieldName="" />
	<field fieldName="uri" fieldType="FIELD" urlFieldName="">
		<cssStyle>color: #0E774A;</cssStyle>
	</field>
</renderer>
