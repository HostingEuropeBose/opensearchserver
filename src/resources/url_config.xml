<configuration>
	<indices>
		<index name="url" searchCache="100" filterCache="100"
			fieldCache="500" />
	</indices>
	<schema>
		<fields default="url" unique="url">
			<field name="lang" indexed="yes" stored="no" termVector="yes" />
			<field name="langMethod" indexed="yes" stored="no" termVector="yes" />
			<field name="contentBaseType" indexed="yes" stored="no"
				termVector="yes" />
			<field name="contentTypeCharset" indexed="yes" stored="no"
				termVector="yes" />
			<field name="contentEncoding" indexed="yes" stored="no"
				termVector="yes" />
			<field name="contentLength" indexed="yes" stored="no"
				termVector="yes" />
			<field name="url" indexed="yes" stored="no" termVector="yes" />
			<field name="outlink" indexed="yes" stored="no" termVector="yes" />
			<field name="inlink" indexed="yes" stored="no" termVector="yes" />
			<field name="host" indexed="yes" stored="no" termVector="yes" />
			<field name="subhost" indexed="yes" stored="no" termVector="yes" />
			<field name="when" indexed="yes" stored="no" termVector="yes" />
			<field name="responseCode" indexed="yes" stored="no"
				termVector="yes" />
			<field name="robotsTxtStatus" indexed="yes" stored="no"
				termVector="yes" />
			<field name="parserStatus" indexed="yes" stored="no"
				termVector="yes" />
			<field name="fetchStatus" indexed="yes" stored="no" termVector="yes" />
			<field name="indexStatus" indexed="yes" stored="no" termVector="yes" />
			<field name="md5size" indexed="yes" stored="no" termVector="yes" />
			<field name="lastModifiedDate" indexed="yes" stored="no"
				termVector="yes" />
			<field name="parentUrl" indexed="yes" stored="no" termVector="yes" />
			<field name="origin" indexed="yes" stored="no" termVector="yes" />
		</fields>
	</schema>
	<requests>
		<request name="urlSearch" defaultOperator="and" start="0"
			rows="0" allowLeadingWildcard="yes">
			<query>$$</query>
			<returnFields>
				url,host,contentBaseType,contentTypeCharset,contentEncoding,contentLength,
				lang,langMethod,when,responseCode,
				robotsTxtStatus,parserStatus,fetchStatus,indexStatus,
				md5size,lastModifiedDate,parentUrl,origin
			</returnFields>
		</request>
		<request name="urlExport" defaultOperator="and" start="0"
			rows="0">
			<query>$$</query>
			<returnFields>url,lastModifiedDate</returnFields>
		</request>
		<request name="hostFacet" defaultOperator="or" start="0" rows="0">
			<query>$$</query>
			<facetFields>
				<facetField name="host" minCount="1" />
			</facetFields>
		</request>
	</requests>
</configuration>